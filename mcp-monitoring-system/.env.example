# MCP Distributed Monitoring System - Environment Variables

# Claude API Configuration
CLAUDE_API_KEY=your-claude-api-key-here

# Database Passwords
POSTGRES_PASSWORD=secure_database_password
REDIS_PASSWORD=secure_redis_password
ODOO_DB_PASSWORD=secure_odoo_db_password
ODOO_ADMIN_PASSWORD=secure_admin_password

# Security Keys
SECRET_KEY=your-secret-key-for-jwt-and-sessions
BACKUP_PANEL_SECRET_KEY=backup-panel-secret-key

# Odoo Configuration
ODOO_MASTER_DB=odoo_master
ODOO_MASTER_USERNAME=admin
ODOO_MASTER_PASSWORD=admin

# SSH Configuration
SSH_KEY_PATH=/app/ssh-keys/mcp_key
SSH_USER=mcp

# Notification Settings
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=admin@example.com

# External Services
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin

# Development Settings
DEBUG_MODE=false
LOG_LEVEL=INFO
