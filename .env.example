# Infrastructure Automation Suite - Environment Configuration

# ===================================================================
# SHARED INFRASTRUCTURE
# ===================================================================

# Shared Database Passwords
POSTGRES_SHARED_PASSWORD=secure_shared_password_123
REDIS_SHARED_PASSWORD=secure_redis_password_456

# Database User Passwords
SAAS_DB_PASSWORD=saas_secure_pass_789
ODOO_DB_PASSWORD=odoo_secure_pass_012
MCP_DB_PASSWORD=mcp_secure_pass_345

# ===================================================================
# MCP MONITORING SYSTEM
# ===================================================================

# Claude AI Configuration
CLAUDE_API_KEY=your-claude-api-key-from-anthropic

# MCP System Settings
MCP_TOKEN_LIMIT=40000
MCP_BATCH_SIZE=5
MCP_DEBUG_MODE=false

# SSH Configuration for MCP Clients
SSH_KEY_PATH=/app/ssh-keys/mcp_key
SSH_USER=mcp
SSH_TIMEOUT=30

# ===================================================================
# ODOO MULTI-TENANT SYSTEM
# ===================================================================

# SaaS Manager Configuration
SAAS_SECRET_KEY=your-super-secret-saas-key-change-this-in-production
SAAS_DB_PASSWORD=saas_secure_pass_789

# Odoo Master Configuration
ODOO_MASTER_DB=odoo_master
ODOO_MASTER_USERNAME=admin
ODOO_MASTER_PASSWORD=secure_admin_password_change_me

# Odoo Database Configuration
ODOO_DB_PASSWORD=odoo_secure_pass_012

# ===================================================================
# SSL & SECURITY
# ===================================================================

# SSL Configuration
SSL_ENABLED=true
LETS_ENCRYPT_EMAIL=admin@yourdomain.com
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/certificate.crt
SSL_PRIVATE_KEY_PATH=/etc/nginx/ssl/private.key

# Security Keys
JWT_SECRET_KEY=your-jwt-secret-key-for-authentication
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# ===================================================================
# MONITORING & OBSERVABILITY
# ===================================================================

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=secure_grafana_password

# Prometheus Configuration
PROMETHEUS_RETENTION_DAYS=30

# Backup Panel Configuration
BACKUP_PANEL_SECRET_KEY=backup-panel-secret-key-change-me

# ===================================================================
# NOTIFICATION & ALERTING
# ===================================================================

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-app-password
NOTIFICATION_EMAIL=alerts@yourdomain.com

# Slack Integration (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#infrastructure-alerts

# Discord Integration (Optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# ===================================================================
# EXTERNAL SERVICES
# ===================================================================

# Domain Configuration
PRIMARY_DOMAIN=yourdomain.com
WILDCARD_DOMAIN=*.yourdomain.com

# CDN Configuration (Optional)
CDN_ENABLED=false
CDN_URL=https://cdn.yourdomain.com

# ===================================================================
# DEVELOPMENT & DEBUGGING
# ===================================================================

# Development Mode
DEBUG_MODE=false
LOG_LEVEL=INFO
VERBOSE_LOGGING=false

# Performance Settings
MAX_WORKERS=4
WORKER_TIMEOUT=300
MAX_CONNECTIONS=100

# ===================================================================
# BACKUP & DISASTER RECOVERY
# ===================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# S3 Backup Configuration (Optional)
S3_BACKUP_ENABLED=false
S3_BUCKET_NAME=your-backup-bucket
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_REGION=us-east-1

# Google Drive Backup (Optional)
GDRIVE_BACKUP_ENABLED=false
GDRIVE_CREDENTIALS_JSON=path/to/credentials.json
GDRIVE_FOLDER_ID=your-google-drive-folder-id

# ===================================================================
# PERFORMANCE & SCALING
# ===================================================================

# Database Performance
POSTGRES_MAX_CONNECTIONS=300
POSTGRES_SHARED_BUFFERS=512MB
POSTGRES_WORK_MEM=16MB

# Redis Performance
REDIS_MAX_MEMORY=1gb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# Odoo Performance
ODOO_MAX_WORKERS=8
ODOO_MAX_CRON_THREADS=2
ODOO_DB_MAXCONN=64

# ===================================================================
# TIMEZONE & LOCALIZATION
# ===================================================================

# System Timezone
TZ=UTC

# Default Language
DEFAULT_LANGUAGE=en_US

# Currency Settings
DEFAULT_CURRENCY=USD

# ===================================================================
# CUSTOM INTEGRATIONS
# ===================================================================

# Custom API Keys (Add your own)
CUSTOM_API_KEY_1=your-custom-api-key-1
CUSTOM_API_KEY_2=your-custom-api-key-2

# Webhook URLs
WEBHOOK_URL_1=https://your-webhook-url-1
WEBHOOK_URL_2=https://your-webhook-url-2

# ===================================================================
# ENVIRONMENT SPECIFIC SETTINGS
# ===================================================================

# Environment Type (development, staging, production)
ENVIRONMENT=production

# Feature Flags
FEATURE_AI_MONITORING=true
FEATURE_AUTO_SCALING=true
FEATURE_ADVANCED_BACKUP=true
FEATURE_MULTI_REGION=false
